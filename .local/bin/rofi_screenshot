#! /bin/sh

style='style-2'

time=`date +%Y-%m-%d-%I-%M-%S`
geometry=`xrandr | head -n1 | cut -d',' -f2 | tr -d '[:blank:],current'`
dir="/home/alston/Pictures/Screenshots"
file="Screenshot_${time}_${geometry}.png"

# notify
notify_user () {
	if [[ -e "$dir/$file" ]]; then
		dunstify -u low --replace=699 -i $dir/$file "Screenshot Saved"
	else
		dunstify -u low --replace=699 -i $dir/$file "Screenshot Deleted."
	fi
}

# countdown
countdown () {
	for sec in `seq $1 -1 1`; do
		dunstify -t 1000 --replace=699 -i $dir/$file "Taking shot in : $sec"
		sleep 1
	done
}

# take shots
shotnow () {
	cd ${dir} && maim -u -f png "$file"
	notify_user
}

shot5 () {
	countdown '5'
	sleep 1 && cd ${dir} && maim -u -f png "$file"
	notify_user
}

shot10 () {
	countdown '10'
	sleep 1 && cd ${dir} && maim -u -f png "$file"
	notify_user
}

shotwin () {
	cd ${dir} && maim -u -f png -i `xdotool getactivewindow` "$file"
	notify_user
}

shotarea () {
	cd ${dir} && maim -u -f png -s -b 2 -c 0.35,0.55,0.85,0.25 -l "$file"
	notify_user
}


rofi_cmd() {
	rofi -dmenu \
		-p "Take screenshot" \
		-theme ~/.config/rofi/screenshot/${style}.rasi
}

chosen=$(printf " Capture desktop\n Capture area\n Capture area with flameshot\n Capture in 5s\n Capture in 10s" | rofi_cmd)

case "$chosen" in
	" Capture desktop") shotnow;;
	" Capture area") shotarea;;
	" Capture area with flameshot") flameshot gui;;
	" Capture in 5s") shot5;;
	" Capture in 10s") shot10;;
	*) exit 1 ;;
esac